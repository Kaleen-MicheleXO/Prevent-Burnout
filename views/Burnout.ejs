<body>
    

      <nav>
        <div class="nav-wrapper">
          <a href="/preventBurnout" class="brand-logo">Burnout tracker</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/preventBurnout/health">Health</a></li>
            <li><a href="/preventBurnout/exercise">Exercise</a></li>
            <li><a href="/preventBurnout/mood">Mood</a></li>
            <li><a href="/preventBurnout/actvities">Actvities</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div>
      </nav>

      <h1>Prevent Burnout Home page</h1>


     <main>
        <ul class="Log">
            <% for(let i=0;i < burnout.length;i++){%>
               <li  class='<%=burnout[i].completed === true ? 'completed' : 'not'%>'>
            <span id="<%= burnout[i]._id %>" class="burnoutItem">
                <span class='<%= burnout[i].completed === true ? 'completed' : 'not'%>'><%= burnout[i].Burnout %></span>
              <!-- <span class="Date"><%=burnout[i].Date %></span> -->
               <span class="fa fa-trash del"></span>
               
                
             
            </li>
            <%}%> 
          </ul>
      </main>


     
    
     
  

    <h2><%= user.userName %> has <%= left %> things left to do.</h2>

    <form action="/preventBurnout/createBurnout" method='POST'>
        <input type="text" placeholder="Enter Item" name='BurnoutItem'>
        <input type="submit">
    </form>

    <!-- <a href="/logout">Logout</a> -->

    <script src="js/main.js"></script>
</body>
