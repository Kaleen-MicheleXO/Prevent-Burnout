
<%- include('partials/header') -%>
<body>
  <nav>
    <div class="nav-wrapper #26a69a teal lighten-1">
      <a href="/preventBurnout" class="brand-logo">Prevent Burnout</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/login"> Login</a></li>
        <li><a href="/signup"> Signup</a></li>
      </ul>
    </div>
  </nav>


    <h1>Create an Account</h1>

    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <form action="/signup" method="POST" class="log center-align  z-depth-2 col s12">
        <input type="text" name="userName" placeholder="User Name">
        <input type="email" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Password">
        <input type="password" name="confirmPassword" placeholder="Confirm Password">
        <button class="center-align btn waves-effect waves-light button " type="submit"> Submit</button>
    </form>
</body>
</html>